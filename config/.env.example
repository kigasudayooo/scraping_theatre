# Discord Bot設定
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_MAIN_CHANNEL_ID=123456789  # 週次通知チャンネルID（オプション）
DISCORD_DETAIL_CHANNEL_ID=987654321  # 質問チャンネルID（オプション）
DISCORD_MAIN_CHANNEL_NAME=weekly-movies  # 週次通知チャンネル名
DISCORD_DETAIL_CHANNEL_NAME=movie-questions  # 質問チャンネル名

# スケジュール設定
WEEKLY_REPORT_TIME=MON 07:30  # 週次レポート時刻
DATA_UPDATE_INTERVAL=6  # データ更新間隔（時間）
TIMEZONE=Asia/Tokyo

# Bot機能設定
ENABLE_PLAYWRIGHT_SEARCH=true  # Playwright外部検索の有効化
ENABLE_AI_RESPONSES=false  # AI応答の有効化（未実装）
CACHE_DURATION_HOURS=24  # キャッシュ持続時間
MAX_SEARCH_RESULTS=10  # 最大検索結果数